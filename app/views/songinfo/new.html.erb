<head>	
<link rel="stylesheet" href="/assets/style.css" />	
</head>
<body>
	<div id="wrapper">	
		<div id="header"> 
			<h2 align= "center" >myMusic</h3>
		</div>
		<div id="content"><br><br>
			<h3 align = "center">Add Song to Playlist:</h3><br><br>
				<table width = "25%" align = "center" cellspacing = "0" cellpadding = "5">
				<%= form_for(@song, :url => new_songinfo_path) do |f| %>
				
					<% if @song.errors.any? %>
					<center>
					<% @song.errors.full_messages.each do |message|%>
					<div style = "color: red;"><%= message %></div>
					<% end %>
					</center>
				
				
					<% end %>
				<col width="15%">
				<col width="50%">
				
					<tr>
						<td>Song: </td>
						<td align = "right"><%= f.text_field :song_title %><br></td>
					</tr>
					<tr>
						<td>Artist: </td>
						<td align = "right"><%= f.text_field :artist_name %><br></td>
					</tr>
					<tr>
						<td>Genre: </td>
						<td align = "right"><%= f.text_field :genre_name %><br></td>
					</tr>
					<tr>
						<td></td>
						<td align = "right"><%= f.submit("Add Song") %></td>
					</tr> 
					<tr>
						<td colspan = "2"><%= link_to "<< Go Back", index_path %></td>
					</tr>
				
					<% end %>
					
					</table>
					
					
		</div>
		<div id="footer">
		</div>
	</div>
</body>








